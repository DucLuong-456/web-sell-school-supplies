<style>
    .mb-3 {
        width: 1000px;
    }

    label {
        display: inline-block;
        min-width: 300px;
        margin-top: 10px;
    }

    .btn_submit {
        width: 200px;
        text-align: center;
    }
</style>

<div class="mt-4" style="width: 600px;">
    <h3 style="margin-left: 40px;">Cập nhật thông tin sản phẩm</h3>
    <form method="POST" action="/book/{{books._id}}?_method=PUT" enctype="multipart/form-data">

        <div class="chia-cot">
            <div class="cot1">
                <div class="mb-3">
                    <label for="name" class="form-label">Tên sản phẩm:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.name}}"
                        name="name">
                </div>
                <div class="mb-3">
                    <label for="nhacungcap" class="form-label">Nhà cung cấp:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.nhacungcap}}"
                        name="nhacungcap">
                </div>
                <div class="mb-3">
                    <label for="nhaXB" class="form-label">Nhà xuất bản:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.nhaXB}}"
                        name="nhaXB">
                </div>
                <div class="mb-3">
                    <label for="tacgia" class="form-label">Tác giả:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.tacgia}}"
                        name="tacgia">
                </div>
                <div class="mb-3">
                    <label for="loaibia" class="form-label">Loại bìa:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.loaibia}}"
                        name="loaibia">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">link ảnh:</label>
                    <img src="/img/{{books.image}}" width="200px" alt="" id="output">

                    <input type="file" class="form-control" id="exampleFormControlInput1" name="imageUp"
                        onchange="loadfile(event)" value="{{books.image}}">
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.image}}"
                        name="image" hidden>

                </div>
            </div>
            <div class="cot2">
                <div class="mb-3">
                    <label for="giaban" class="form-label">Giá bán:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.giaban}}"
                        name="giaban">
                </div>
                <div class="mb-3">
                    <label for="soluongton" class="form-label">Số lượng tồn:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.soluongton}}"
                        name="soluongton">
                </div>
                <div class="mb-3">
                    <label for="bo" class="form-label">Bộ:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.bo}}"
                        name="bo">
                </div>
                <div class="mb-3">
                    <label for="slug" class="form-label">slug:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" value="{{books.slug}}"
                        name="slug">
                </div>
                <div class="mb-3">
                    <label for="categoriesID" class="form-label">Category:</label>
                    <span id="categoryIDCopy" hidden>{{books.categoryID}}</span>
                   <select name="categoryID" id="categoryID">
                    {{#each categories}}
                        <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                    </select>
                </div>
            </div>


        </div>
        <button type="submit" class="mb-3 btn btn-primary btn_submit">Lưu lại</button>
    </form>

</div>
<script>
    function loadfile(event) {
        var image = document.getElementById('output')
        image.src = URL.createObjectURL(event.target.files[0])
    }
    var categoryValue= document.getElementById('categoryIDCopy').innerHTML
    document.getElementById('categoryID').value = categoryValue
</script>