<style>
    .mb-3 {
        width: 1000px;
    }

    label {
        display: inline-block;
        min-width: 300px;
        margin-top: 10px;
    }

    .btn_submit {
        width: 200px;
        text-align: center;
    }
</style>
<div class="mt-4" style="width: 600px;">
    <h3 style="margin-left: 40px;">ĐĂNG SẢN PHẨM MỚI</h3>
    <form method="POST" action="/book/store" enctype="multipart/form-data">
        <div class="chia-cot" style="margin: 20px;">
            <div class="cot1">
                <div class="mb-3">
                    <label for="name" class="form-label">Tên :</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="name">
                </div>
                <div class="mb-3">
                    <label for="nhacungcap" class="form-label">Nhà cung cấp:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="nhacungcap">
                </div>
                <div class="mb-3">
                    <label for="nhaXB" class="form-label">Nhà xuất bản:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="nhaXB">
                </div>
                <div class="mb-3">
                    <label for="tacgia" class="form-label">Tác giả:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="tacgia">
                </div>
                <div class="mb-3">
                    <label for="loaibia" class="form-label">Loại bìa:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="loaibia">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">hình ảnh:</label>
                    <img src="../img/no-image.png" id="output" alt="ảnh" width="180" height="200">
                    <input type="file" class="form-control" id="ufile" name="image" onchange="loadfile(event)">
                </div>
            </div>
            <div class="cot2">
                <div class="mb-3">
                    <label for="giaban" class="form-label">Giá bán:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="giaban">
                </div>
                <div class="mb-3">
                    <label for="soluongton" class="form-label">Số lượng tồn:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="soluongton">
                </div>
                <div class="mb-3">
                    <label for="bo" class="form-label">Bộ:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="bo">
                </div>
                <div class="mb-3">
                    <label for="slug" class="form-label">slug:</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="slug">
                </div>
                <div class="mb-3">
                    <label for="categoriesID" class="form-label">Category:</label>
                    <select name="categoryID" id="categoryID">
                        {{#each categories}}
                        <option value="{{this._id}}">{{this.name}}</option>
                        {{/each}}
                    </select>

                </div>
            </div>


        </div>
        <button type="submit" class="mb-3 btn btn-primary btn_submit">Thêm sản phẩm</button>
    </form>
    <a href="/dashboard/products" style="margin-left: 5px;" class="btn">Quay lại</a>


</div>

<script>
    function loadfile(event) {
        var image = document.getElementById('output')
        image.src = URL.createObjectURL(event.target.files[0])
    }
</script>