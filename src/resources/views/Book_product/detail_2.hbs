<script>
    var giaban = document.querySelector('.cost_current span');
    giaban.innerHTML = (new Intl.NumberFormat('vi', { style: 'currency', currency: 'VND' }).format(parseFloat(giaban.innerHTML)));

    var add_to_cartDOM = document.querySelector('#add_to_cart')
    var nameInput = document.querySelector('#name').value
    var imageInput = document.querySelector('#image').value
    var costInput = document.querySelector('#cost').value

    var soluongmuaInput = document.querySelector('#postSL').value
    add_to_cartDOM.addEventListener('click', async (e) => {

        e.preventDefault()// Ngăn chặn hành vi mặc định của sự kiện submit
        //console.log(1)
        try {
            const res = await axios.get('http://localhost:3000/user/islogin');
            const islogin = res.data.isLogin;

            if (!islogin || islogin === false) {
                alert("Bạn hãy đăng nhập trước khi thêm vào giỏ hàng!");
            } else {
                // Xử lý logic khi đăng nhập thành công
                let result = await axios.post('http://localhost:3000/cart/addcart', { name: nameInput, image: imageInput, giaBan: costInput, soLuong: soluongmuaInput })
                if (result.data.status == false)
                    return alert(result.data.msg)
                else {
                    window.location.href = 'http://localhost:3000/cart';
                }


            }
        } catch (err) {
            console.log(err);
        }
    });
</script>

