                        <i class=" fas fa-star star"></i>
                        <i class=" fas fa-star star"></i>
                        <i class=" fas fa-star star"></i>
                        <span style="color:orange;">(0) Đánh giá</span>

                    </div>
                    <div class="product_cost">
                        <div class="cost_current">
                            <span>{{books.giaban}} đ</span>
                        </div>
                        <div class="cost_old">
                            <span>39.000 đ</span>
                        </div>
                        <div class="product_sale">
                            <span>-20%</span>
                        </div>
                    </div>
                    <div class="product_delivery">
                        <div class="delivery_time">
                            <span>Thời gian giao hàng</span>
                            <span>Giao hàng đến </span>
                            <a href="#">Thay đổi</a>
                        </div>
                        <div class="delivery_change">
                            <span>Chính sách đổi trả</span>
                            <span>Đổi trả trong vòng 30 ngày </span>
                            <a href="#">Xem thêm</a>
                        </div>
                    </div>
                    <div class="product_quantity">
                        <div class="quan_title">
                            <span>Số lượng :</span>
                        </div>
                        <div class="add_quantity">
                            <i class="fa-solid fa-minus" onclick="sub()"></i>
                            <span id="soluong" onclick="muaclick()">1</span>
                            <i class="fa-solid fa-plus" onclick="plus()"></i>
                        </div>
                    </div>
                </div>

            </div>
            <div class="product_shopping">
                <form action="/cart/addcart" method="POST" id="form_add_cart">
                    <a href="" style="text-decoration: none;">
                        <div class="product_card ">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <input type="text" value="{{books.name}}" name="name" id="name" hidden>
                            <input type="text" value="{{books.image}}" name="image" id="image" hidden>
                            <input type="text" value="{{books.giaban}}" name="giaBan" id="cost" hidden>
                            <input type="text" value="" name="soLuong" id="postSL" hidden>
                            <input type="text" value="{{books._id}}" name="productId" id="productId" hidden>
